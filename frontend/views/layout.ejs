<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>JeevBandhu - Livestock Health Management</title>

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap"
    rel="stylesheet">

  <link rel="stylesheet" href="/css/output.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
</head>

<body class="bg-gray-50 min-h-screen" style="font-family: 'Plus Jakarta Sans', sans-serif;">
  <!-- Subtle Background Pattern -->
  <div class="fixed inset-0 -z-10 opacity-30">
    <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
          <circle cx="20" cy="20" r="1.5" fill="#064e3b" opacity="0.4" />
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#grid)" />
    </svg>
  </div>
  <!-- Navigation -->
  <!-- Glassmorphism Navigation -->
  <nav class="nav-glass sticky top-0 z-50">
    <div class="max-w-full xl:max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center">
          <a href="/" class="text-2xl font-extrabold gradient-text hover:scale-105 transition-transform duration-300">üêÑ
            JeevBandhu</a>
        </div>

        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center space-x-4">
          <% if (user) { %>
            <% if (user.role==='farmer' ) { %>
              <a href="/dashboard"
                class="text-gray-700 hover:text-emerald-600 font-medium transition-all duration-200 hover:scale-105">Dashboard</a>
              <a href="/animals/add"
                class="text-gray-700 hover:text-emerald-600 font-medium transition-all duration-200 hover:scale-105">Add
                Animal</a>
              <a href="/list-product"
                class="text-gray-700 hover:text-emerald-600 font-medium transition-all duration-200 hover:scale-105">List
                Product</a>
              <a href="/my-products"
                class="text-gray-700 hover:text-emerald-600 font-medium transition-all duration-200 hover:scale-105">My
                Products</a>
              <% } %>
                <a href="/marketplace"
                  class="text-gray-700 hover:text-emerald-600 font-medium transition-all duration-200 hover:scale-105">Marketplace</a>
                <span class="text-gray-700 font-semibold px-3 py-1 bg-soft-sage rounded-full">Hi, <%= user.name
                    || 'User' %></span>
                <form action="/logout" method="POST" class="inline">
                  <button type="submit"
                    class="text-red-600 hover:text-red-700 font-medium transition-all duration-200 hover:scale-105">Logout</button>
                </form>
                <% } else { %>
                  <a href="/login"
                    class="text-gray-700 hover:text-emerald-600 font-medium transition-all duration-200 hover:scale-105">Login</a>
                  <a href="/register" class="btn-primary">Get Started</a>
                  <% } %>
        </div>

        <!-- Mobile Hamburger Button -->
        <button id="mobileMenuBtn"
          class="md:hidden flex flex-col justify-center items-center w-10 h-10 hamburger z-50 relative">
          <span class="block w-6 h-0.5 bg-gray-700 mb-1"></span>
          <span class="block w-6 h-0.5 bg-gray-700 mb-1"></span>
          <span class="block w-6 h-0.5 bg-gray-700"></span>
        </button>
      </div>
    </div>

    <!-- Mobile Menu Overlay -->
    <div id="mobileMenu" class="mobile-menu hidden fixed top-0 right-0 h-full w-64 bg-white shadow-2xl z-40 md:hidden">
      <div class="flex flex-col p-6 pt-20 space-y-4">
        <% if (user) { %>
          <% if (user.role==='farmer' ) { %>
            <a href="/dashboard"
              class="text-gray-700 hover:text-emerald-600 font-medium py-2 border-b border-gray-200">Dashboard</a>
            <a href="/animals/add"
              class="text-gray-700 hover:text-emerald-600 font-medium py-2 border-b border-gray-200">Add Animal</a>
            <a href="/list-product"
              class="text-gray-700 hover:text-emerald-600 font-medium py-2 border-b border-gray-200">List Product</a>
            <a href="/my-products"
              class="text-gray-700 hover:text-emerald-600 font-medium py-2 border-b border-gray-200">My Products</a>
            <% } %>
              <a href="/marketplace"
                class="text-gray-700 hover:text-emerald-600 font-medium py-2 border-b border-gray-200">Marketplace</a>
              <span class="text-gray-700 font-semibold px-3 py-2 bg-soft-sage rounded-full text-center">Hi, <%=
                  user.name || 'User' %></span>
              <form action="/logout" method="POST" class="inline">
                <button type="submit"
                  class="w-full text-left text-red-600 hover:text-red-700 font-medium py-2">Logout</button>
              </form>
              <% } else { %>
                <a href="/login"
                  class="text-gray-700 hover:text-emerald-600 font-medium py-2 border-b border-gray-200">Login</a>
                <a href="/register" class="btn-primary text-center">Get Started</a>
                <% } %>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="max-w-full xl:max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <%- body %>
  </main>

  <!-- Footer -->
  <!-- Premium Footer -->
  <footer class="bg-gradient-to-br from-deep-emerald to-emerald-900 mt-12">
    <div class="max-w-full xl:max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <p class="text-center text-emerald-100 text-sm font-medium">
        ¬© 2024 JeevBandhu - Ensuring Bio-Safe Livestock Products
      </p>
      <p class="text-center text-emerald-300 text-xs mt-2">
        Smart Forecasting for Healthy Livestock üå±
      </p>
    </div>
  </footer>

  <!-- Mobile Menu JavaScript -->
  <script>
    // Mobile menu toggle
    const mobileMenuBtn = document.getElementById('mobileMenuBtn');
    const mobileMenu = document.getElementById('mobileMenu');

    if (mobileMenuBtn && mobileMenu) {
      mobileMenuBtn.addEventListener('click', function (e) {
        e.stopPropagation();
        mobileMenu.classList.toggle('hidden');
        mobileMenu.classList.toggle('active');
        mobileMenuBtn.classList.toggle('active');
      });

      // Close menu when clicking outside
      document.addEventListener('click', function (e) {
        if (mobileMenu && !mobileMenu.contains(e.target) && !mobileMenuBtn.contains(e.target)) {
          mobileMenu.classList.add('hidden');
          mobileMenu.classList.remove('active');
          mobileMenuBtn.classList.remove('active');
        }
      });

      // Close menu when clicking a link
      const mobileLinks = mobileMenu.querySelectorAll('a');
      mobileLinks.forEach(link => {
        link.addEventListener('click', function () {
          mobileMenu.classList.add('hidden');
          mobileMenu.classList.remove('active');
          mobileMenuBtn.classList.remove('active');
        });
      });
    }
  </script>
</body>

</html>
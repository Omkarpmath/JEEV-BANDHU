<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= animal.tagId %> - JeevBandhu
    </title>
    <link rel="stylesheet" href="/css/output.css">
</head>

<body class="bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-md">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <a href="/dashboard" class="text-2xl font-bold text-emerald-600">üêÑ JeevBandhu</a>
                <div class="flex items-center space-x-6">
                    <a href="/dashboard" class="text-gray-700 hover:text-emerald-600 transition">Dashboard</a>
                    <span class="text-gray-600">Hi, <%= user.name %></span>
                    <form action="/logout" method="POST" class="inline">
                        <button type="submit" class="text-red-600 hover:text-red-700 transition">Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <main class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="mb-6">
            <a href="/dashboard" class="text-emerald-600 hover:text-emerald-700">‚Üê Back to Dashboard</a>
        </div>

        <!-- Main Content with Better Visual Balance -->
        <div class="max-w-6xl mx-auto">
            <!-- Medical History Section (Center-aligned) -->
            <div class="mb-8">
                <div class="card max-w-4xl mx-auto">
                    <h3 class="text-2xl font-bold text-gray-900 mb-6 text-center">üìã Medical History</h3>

                    <% if (medicalLogs.length===0) { %>
                        <div class="text-center py-12 text-gray-500">
                            <div class="text-5xl mb-3">üíä</div>
                            <p class="text-lg">No medical records yet</p>
                            <p class="text-sm mt-2">Medical logs will appear here when you add treatments</p>
                        </div>
                        <% } else { %>
                            <div class="space-y-4">
                                <% medicalLogs.forEach(log=> { %>
                                    <div
                                        class="border-2 border-gray-200 rounded-lg p-5 hover:border-emerald-400 transition-all hover:shadow-md">
                                        <div class="flex justify-between items-start mb-3">
                                            <h4 class="font-bold text-gray-900 text-lg">
                                                <%= log.medicineName %>
                                            </h4>
                                            <span class="text-sm text-gray-500 bg-gray-100 px-3 py-1 rounded-full">
                                                <%= new Date(log.administeredAt).toLocaleDateString() %>
                                            </span>
                                        </div>

                                        <div class="grid grid-cols-2 gap-4 text-sm mb-3">
                                            <% if (log.dosage) { %>
                                                <div class="bg-blue-50 p-3 rounded-lg">
                                                    <span class="text-gray-600 text-xs">Dosage:</span>
                                                    <p class="font-semibold text-gray-900">
                                                        <%= log.dosage %>
                                                    </p>
                                                </div>
                                                <% } %>

                                                    <div class="bg-yellow-50 p-3 rounded-lg">
                                                        <span class="text-gray-600 text-xs">Withdrawal Period:</span>
                                                        <p class="font-bold text-gray-900">
                                                            <%= log.withdrawalDays %> days
                                                        </p>
                                                    </div>
                                        </div>

                                        <% if (log.notes) { %>
                                            <p class="text-sm text-gray-700 bg-gray-50 p-3 rounded-lg italic">
                                                <%= log.notes %>
                                            </p>
                                            <% } %>
                                    </div>
                                    <% }) %>
                            </div>
                            <% } %>
                </div>
            </div>

            <!-- Animal Info Card (Offset to Right for Balance) -->
            <div class="flex justify-end">
                <div class="card max-w-md w-full shadow-xl border-2 border-emerald-200">
                    <div class="flex items-center justify-between mb-6">
                        <h2 class="text-2xl font-bold text-gray-900">
                            üêÑ <%= animal.tagId %>
                        </h2>
                        <!-- Status Badge -->
                        <span class="px-4 py-2 rounded-full text-sm font-semibold
                            <% if (animal.status === 'HEALTHY') { %>bg-green-200 text-green-800<% } %>
                            <% if (animal.status === 'WITHDRAWAL_LOCK') { %>bg-red-200 text-red-800<% } %>
                            <% if (animal.status === 'QUARANTINE') { %>bg-yellow-200 text-yellow-800<% } %>">
                            <%= animal.status %>
                        </span>
                    </div>

                    <!-- Info Grid -->
                    <div class="space-y-4 text-sm mb-6">
                        <div class="flex justify-between p-3 bg-gray-50 rounded-lg">
                            <span class="text-gray-600">Species:</span>
                            <span class="font-semibold">
                                <%= animal.species %>
                            </span>
                        </div>

                        <% if (animal.breed) { %>
                            <div class="flex justify-between p-3 bg-gray-50 rounded-lg">
                                <span class="text-gray-600">Breed:</span>
                                <span class="font-semibold">
                                    <%= animal.breed %>
                                </span>
                            </div>
                            <% } %>

                                <% if (animal.geneticLineage) { %>
                                    <div class="flex justify-between p-3 bg-gray-50 rounded-lg">
                                        <span class="text-gray-600">Lineage:</span>
                                        <span class="font-semibold">
                                            <%= animal.geneticLineage %>
                                        </span>
                                    </div>
                                    <% } %>
                    </div>

                    <!-- Health Score -->
                    <div class="mb-6 p-4 bg-gradient-to-r from-blue-50 to-emerald-50 rounded-lg border border-blue-200">
                        <div class="flex justify-between text-sm mb-3">
                            <span class="text-gray-700 font-semibold">Health Score</span>
                            <span class="font-bold text-xl">
                                <%= animal.healthScore %>/100
                            </span>
                        </div>
                        <div class="w-full bg-gray-200 rounded-full h-4">
                            <div class="h-4 rounded-full transition-all
                                <% if (animal.healthScore >= 70) { %>bg-health-good<% } else if (animal.healthScore >= 40) { %>bg-health-warning<% } else { %>bg-health-danger<% } %>"
                                style="width: <%= animal.healthScore %>%">
                            </div>
                        </div>
                    </div>

                    <!-- Withdrawal Warning -->
                    <% if (animal.status==='WITHDRAWAL_LOCK' && daysRemaining> 0) { %>
                        <div class="mb-6 bg-red-100 border-2 border-red-400 text-red-700 px-4 py-3 rounded-lg">
                            <strong class="flex items-center gap-2">
                                <span class="text-2xl">üîí</span>
                                Withdrawal Period
                            </strong>
                            <p class="text-sm mt-2">
                                <%= daysRemaining %> day(s) remaining until safe for production
                            </p>
                        </div>
                        <% } %>

                            <!-- Actions -->
                            <div class="space-y-3">
                                <a href="/animals/<%= animal._id %>/add-medicine" class="block text-center btn-primary">
                                    ‚ûï Add Medical Log
                                </a>
                                <button onclick="deleteAnimal()" class="w-full btn-danger">
                                    üóëÔ∏è Delete Animal
                                </button>
                            </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        async function deleteAnimal() {
            if (!confirm('Are you sure you want to delete this animal? This action cannot be undone.')) {
                return;
            }

            try {
                const response = await fetch('/animals/<%= animal._id %>/delete', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });

                const data = await response.json();

                if (data.success) {
                    window.location.href = '/dashboard';
                } else {
                    alert('Failed to delete animal: ' + data.error);
                }
            } catch (error) {
                alert('Error deleting animal');
            }
        }
    </script>
</body>

</html>
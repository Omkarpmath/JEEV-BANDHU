<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Farm Analytics - JeevBandhu</title>
    <link rel="stylesheet" href="/css/output.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <style>
        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: white;
            min-width: 200px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            z-index: 100;
            top: 100%;
            left: 0;
            margin-top: 0px;
            padding-top: 8px;
        }

        .dropdown-content a {
            color: #374151;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            transition: background-color 0.2s;
        }

        .dropdown-content a:hover {
            background-color: #f3f4f6;
            color: #059669;
        }

        .dropdown-content a:first-child {
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
        }

        .dropdown-content a:last-child {
            border-bottom-left-radius: 8px;
            border-bottom-right-radius: 8px;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown-trigger {
            cursor: pointer;
            user-select: none;
        }

        .dropdown-content:hover {
            display: block;
        }

        .kpi-card {
            transition: transform 0.2s;
        }

        .kpi-card:hover {
            transform: translateY(-4px);
        }
    </style>
</head>

<body class="bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-md sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <a href="/dashboard" class="text-2xl font-bold text-emerald-600">üêÑ JeevBandhu</a>
                <div class="flex items-center space-x-6">
                    <a href="/dashboard" class="text-gray-700 hover:text-emerald-600 transition">üè† Dashboard</a>

                    <div class="dropdown">
                        <span class="dropdown-trigger text-emerald-600 font-semibold">üåæ Farm ‚ñæ</span>
                        <div class="dropdown-content">
                            <a href="/animals/add">‚ûï Add Animal</a>
                            <a href="/dashboard">üìä My Animals</a>
                            <a href="/analytics">üìà Analytics</a>
                            <a href="/ai-assistant">ü©∫ AI Diagnosis</a>
                            <a href="/guide/medicine-guide">üíä Medicine Guide</a>
                            <a href="/compliance">‚úÖ Biosecurity</a>
                        </div>
                    </div>

                    <div class="dropdown">
                        <span class="dropdown-trigger text-gray-700 hover:text-emerald-600 transition">üíº Commerce
                            ‚ñæ</span>
                        <div class="dropdown-content">
                            <a href="/marketplace">üõí Browse Marketplace</a>
                            <a href="/list-product">‚ûï List Product</a>
                            <a href="/my-products">üì¶ My Products</a>
                            <a href="/orders/sales">üí∞ Sales</a>
                        </div>
                    </div>

                    <a href="/community" class="text-gray-700 hover:text-emerald-600 transition">üë• Community</a>
                    <span class="text-gray-600">Hi, <%= user.name %></span>
                    <form action="/logout" method="POST" class="inline">
                        <button type="submit" class="text-red-600 hover:text-red-700 transition">Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Header -->
        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Farm Analytics Dashboard</h1>
                <p class="text-gray-600 mt-2">Track your farm's performance and growth metrics</p>
            </div>
            <div class="flex gap-2">
                <a href="/analytics?period=1m"
                    class="px-4 py-2 rounded-lg font-semibold transition <%= period === '1m' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300' %>">
                    1 Month
                </a>
                <a href="/analytics?period=6m"
                    class="px-4 py-2 rounded-lg font-semibold transition <%= period === '6m' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300' %>">
                    6 Months
                </a>
                <a href="/analytics?period=1y"
                    class="px-4 py-2 rounded-lg font-semibold transition <%= period === '1y' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300' %>">
                    1 Year
                </a>
            </div>
        </div>

        <!-- KPI Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <!-- Total Animals -->
            <div class="card kpi-card bg-gradient-to-br from-emerald-50 to-green-100">
                <div class="flex justify-between items-start mb-2">
                    <h3 class="text-sm font-medium text-gray-600">Total Animals</h3>
                    <span class="text-2xl">üêÑ</span>
                </div>
                <p class="text-4xl font-bold text-gray-900">
                    <%= kpis.totalAnimals %>
                </p>
                <p class="text-sm text-green-600 mt-2">+12% from last period</p>
            </div>

            <!-- Avg Weight Gain -->
            <div class="card kpi-card bg-gradient-to-br from-blue-50 to-indigo-100">
                <div class="flex justify-between items-start mb-2">
                    <h3 class="text-sm font-medium text-gray-600">Avg. Weight Gain</h3>
                    <span class="text-2xl">üìà</span>
                </div>
                <p class="text-4xl font-bold text-gray-900">
                    <%= kpis.avgWeightGain %> <span class="text-xl">kg/month</span>
                </p>
                <p class="text-sm text-green-600 mt-2">+8% from last period</p>
            </div>

            <!-- Mortality Rate -->
            <div class="card kpi-card bg-gradient-to-br from-red-50 to-pink-100">
                <div class="flex justify-between items-start mb-2">
                    <h3 class="text-sm font-medium text-gray-600">Mortality Rate</h3>
                    <span class="text-2xl">‚ö†Ô∏è</span>
                </div>
                <p class="text-4xl font-bold text-gray-900">
                    <%= kpis.mortalityRate %>%
                </p>
                <p class="text-sm text-red-600 mt-2">-0.5% from last period</p>
            </div>

            <!-- Feed Efficiency -->
            <div class="card kpi-card bg-gradient-to-br from-yellow-50 to-amber-100">
                <div class="flex justify-between items-start mb-2">
                    <h3 class="text-sm font-medium text-gray-600">Feed Efficiency</h3>
                    <span class="text-2xl">üåæ</span>
                </div>
                <p class="text-4xl font-bold text-gray-900">
                    <%= kpis.avgFCR %> <span class="text-xl">FCR</span>
                </p>
                <p class="text-sm text-green-600 mt-2">-5% from last period</p>
            </div>
        </div>

        <!-- Charts Row 1 -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
            <!-- Individual Animal Weights Chart -->
            <div class="card">
                <h2 class="text-xl font-bold text-gray-900 mb-4">Individual Animal Weights</h2>
                <canvas id="weightChart"></canvas>
            </div>

            <!-- Mortality Trend -->
            <div class="card">
                <h2 class="text-xl font-bold text-gray-900 mb-4">Mortality Rate Trend</h2>
                <canvas id="mortalityChart"></canvas>
            </div>
        </div>

        <!-- FCR Chart -->
        <div class="card mb-8">
            <h2 class="text-xl font-bold text-gray-900 mb-4">Feed Conversion Ratio</h2>
            <canvas id="fcrChart"></canvas>
        </div>

        <!-- Regional Comparison -->
        <div class="card">
            <h2 class="text-xl font-bold text-gray-900 mb-6">Your Farm vs Regional Average</h2>

            <!-- Growth Rate -->
            <div class="mb-6">
                <div class="flex justify-between items-center mb-2">
                    <span class="font-semibold text-gray-900">Growth Rate</span>
                    <div class="flex gap-4 text-sm">
                        <span class="text-emerald-600">Your Farm: <%= regionalData.growthRate.yours %> kg/month</span>
                        <span class="text-gray-600">Regional Avg: <%= regionalData.growthRate.regional %>
                                kg/month</span>
                    </div>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-4">
                    <div class="bg-emerald-600 h-4 rounded-full"
                        style="width: <%= Math.min((regionalData.growthRate.yours / regionalData.growthRate.regional) * 100 * 0.5, 100) %>%">
                    </div>
                </div>
            </div>

            <!-- Feed Efficiency -->
            <div class="mb-6">
                <div class="flex justify-between items-center mb-2">
                    <span class="font-semibold text-gray-900">Feed Efficiency (Lower is Better)</span>
                    <div class="flex gap-4 text-sm">
                        <span class="text-emerald-600">Your Farm: <%= regionalData.feedEfficiency.yours %> FCR</span>
                        <span class="text-gray-600">Regional Avg: <%= regionalData.feedEfficiency.regional %> FCR</span>
                    </div>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-4">
                    <div class="bg-blue-600 h-4 rounded-full"
                        style="width: <%= Math.min((regionalData.feedEfficiency.regional / regionalData.feedEfficiency.yours) * 100 * 0.5, 100) %>%">
                    </div>
                </div>
            </div>

            <!-- Health Score -->
            <div class="mb-6">
                <div class="flex justify-between items-center mb-2">
                    <span class="font-semibold text-gray-900">Health Score</span>
                    <div class="flex gap-4 text-sm">
                        <span class="text-emerald-600">Your Farm: <%= regionalData.healthScore.yours %>%</span>
                        <span class="text-gray-600">Regional Avg: <%= regionalData.healthScore.regional %>%</span>
                    </div>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-4">
                    <div class="bg-green-600 h-4 rounded-full" style="width: <%= regionalData.healthScore.yours %>%">
                    </div>
                </div>
            </div>

            <!-- Productivity -->
            <div>
                <div class="flex justify-between items-center mb-2">
                    <span class="font-semibold text-gray-900">Productivity</span>
                    <div class="flex gap-4 text-sm">
                        <span class="text-emerald-600">Your Farm: <%= regionalData.productivity.yours %>%</span>
                        <span class="text-gray-600">Regional Avg: <%= regionalData.productivity.regional %>%</span>
                    </div>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-4">
                    <div class="bg-indigo-600 h-4 rounded-full" style="width: <%= regionalData.productivity.yours %>%">
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        // Convert server data to JavaScript
        const weightTrends = <% - JSON.stringify(weightTrends) %>;
        const fcrTrends = <% - JSON.stringify(fcrTrends) %>;
        const animalWeights = <% - JSON.stringify(animalWeights) %>;
        const mortalityTrend = <% - JSON.stringify(mortalityTrend) %>;

        // Individual Animal Weights Chart (Bar chart)
        const weightCtx = document.getElementById('weightChart').getContext('2d');
        new Chart(weightCtx, {
            type: 'bar',
            data: {
                labels: animalWeights.map(a => a.name),
                datasets: [{
                    label: 'Current Weight (kg)',
                    data: animalWeights.map(a => a.weight),
                    backgroundColor: '#059669',
                    borderColor: '#047857',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { display: true },
                    title: {
                        display: true,
                        text: 'Individual Animal Weights'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: false,
                        title: {
                            display: true,
                            text: 'Weight (kg)'
                        }
                    }
                }
            }
        });

        // Mortality Chart (Real data from backend)
        const mortalityCtx = document.getElementById('mortalityChart').getContext('2d');
        new Chart(mortalityCtx, {
            type: 'line',
            data: {
                labels: mortalityTrend.map(d => d.month),
                datasets: [{
                    label: 'Mortality Rate (%)',
                    data: mortalityTrend.map(d => d.rate),
                    backgroundColor: 'rgba(239, 68, 68, 0.1)',
                    borderColor: '#ef4444',
                    borderWidth: 2,
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { display: true },
                    tooltip: {
                        callbacks: {
                            afterLabel: function (context) {
                                const dataIndex = context.dataIndex;
                                const deaths = mortalityTrend[dataIndex].deaths;
                                return `Deaths: ${deaths}`;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Mortality Rate (%)'
                        }
                    }
                }
            }
        });

        // FCR Chart
        const fcrCtx = document.getElementById('fcrChart').getContext('2d');
        new Chart(fcrCtx, {
            type: 'line',
            data: {
                labels: fcrTrends.map(d => d.month),
                datasets: [{
                    label: 'Feed Conversion Ratio',
                    data: fcrTrends.map(d => d.fcr),
                    borderColor: '#3b82f6',
                    backgroundColor: 'rgba(59, 130, 246, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { display: true }
                },
                scales: {
                    y: {
                        beginAtZero: false,
                        reverse: false  // Lower FCR is better
                    }
                }
            }
        });
    </script>
</body>

</html>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Veterinary Medicine Guide - JeevBandhu</title>
    <link rel="stylesheet" href="/css/output.css">
</head>

<body class="bg-gradient-to-br from-emerald-50 via-white to-blue-50 min-h-screen">
    <!-- Navigation -->
    <nav class="bg-white shadow-md sticky top-0 z-50">
        <div class="max-w-full xl:max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <a href="/dashboard" class="text-2xl font-bold text-emerald-600">üêÑ JeevBandhu</a>

                <!-- Desktop Navigation -->
                <div class="hidden md:flex items-center space-x-6">
                    <a href="/dashboard" class="text-gray-700 hover:text-emerald-600 transition">Dashboard</a>
                    <a href="/guide/medicine-guide" class="text-emerald-600 font-semibold">Medicine Guide</a>
                    <span class="text-gray-600">Hi, <%= user.name %></span>
                    <form action="/logout" method="POST" class="inline">
                        <button type="submit" class="text-red-600 hover:text-red-700 transition">Logout</button>
                    </form>
                </div>

                <!-- Mobile Hamburger Button -->
                <button id="medicineMenuBtn"
                    class="md:hidden flex flex-col justify-center items-center w-10 h-10 hamburger z-50 relative">
                    <span class="block w-6 h-0.5 bg-gray-700 mb-1"></span>
                    <span class="block w-6 h-0.5 bg-gray-700 mb-1"></span>
                    <span class="block w-6 h-0.5 bg-gray-700"></span>
                </button>
            </div>
        </div>

        <!-- Mobile Menu Overlay -->
        <div id="medicineMenu"
            class="mobile-menu hidden fixed top-0 right-0 h-full w-64 bg-white shadow-2xl z-40 md:hidden">
            <div class="flex flex-col p-6 pt-20 space-y-4">
                <a href="/dashboard"
                    class="text-gray-700 hover:text-emerald-600 font-medium py-2 border-b border-gray-200">Dashboard</a>
                <a href="/guide/medicine-guide"
                    class="text-emerald-600 font-semibold py-2 border-b border-gray-200">Medicine Guide</a>
                <span class="text-gray-600 px-3 py-2 bg-emerald-50 rounded-full text-center">Hi, <%= user.name %></span>
                <form action="/logout" method="POST" class="inline">
                    <button type="submit"
                        class="w-full text-left text-red-600 hover:text-red-700 font-medium py-2">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <main class="max-w-full xl:max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">üíä Veterinary Medicine Guide</h1>
            <p class="text-gray-600 mt-2">Research-based dosage, withdrawal periods, and treatment guidelines</p>
        </div>

        <!-- Species Selector -->
        <div class="card mb-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Select Animal Species</h3>
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
                <a href="/guide/medicine-guide?species=cattle"
                    class="<%= species === 'cattle' ? 'bg-emerald-600 text-white' : 'bg-white text-gray-700 hover:bg-emerald-50' %> border-2 border-emerald-600 rounded-lg p-4 text-center transition cursor-pointer">
                    <div class="text-3xl mb-2">üêÑ</div>
                    <div class="font-semibold">Cattle</div>
                </a>
                <a href="/guide/medicine-guide?species=buffalo"
                    class="<%= species === 'buffalo' ? 'bg-emerald-600 text-white' : 'bg-white text-gray-700 hover:bg-emerald-50' %> border-2 border-emerald-600 rounded-lg p-4 text-center transition cursor-pointer">
                    <div class="text-3xl mb-2">üêÉ</div>
                    <div class="font-semibold">Buffalo</div>
                </a>
                <a href="/guide/medicine-guide?species=goat"
                    class="<%= species === 'goat' ? 'bg-emerald-600 text-white' : 'bg-white text-gray-700 hover:bg-emerald-50' %> border-2 border-emerald-600 rounded-lg p-4 text-center transition cursor-pointer">
                    <div class="text-3xl mb-2">üêê</div>
                    <div class="font-semibold">Goat</div>
                </a>
                <a href="/guide/medicine-guide?species=sheep"
                    class="<%= species === 'sheep' ? 'bg-emerald-600 text-white' : 'bg-white text-gray-700 hover:bg-emerald-50' %> border-2 border-emerald-600 rounded-lg p-4 text-center transition cursor-pointer">
                    <div class="text-3xl mb-2">üêë</div>
                    <div class="font-semibold">Sheep</div>
                </a>
                <a href="/guide/medicine-guide?species=poultry"
                    class="<%= species === 'poultry' ? 'bg-emerald-600 text-white' : 'bg-white text-gray-700 hover:bg-emerald-50' %> border-2 border-emerald-600 rounded-lg p-4 text-center transition cursor-pointer">
                    <div class="text-3xl mb-2">üêî</div>
                    <div class="font-semibold">Poultry</div>
                </a>
            </div>
        </div>

        <!-- Search Bar -->
        <div class="card mb-6">
            <div class="flex gap-4">
                <input type="text" id="medicineSearch"
                    placeholder="üîç Search by treatment or medicine name (e.g., mastitis, pneumonia, worms...)"
                    class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:ring-emerald-500 focus:border-emerald-500">
                <div class="flex items-center px-4 py-3 bg-emerald-50 rounded-lg">
                    <span class="text-sm text-emerald-700 font-semibold">
                        <span id="visibleMedicines">
                            <%= medicines.length %>
                        </span> of <%= medicines.length %> shown
                    </span>
                </div>
            </div>
        </div>

        <!-- Medicine Cards -->
        <% if (medicines.length===0) { %>
            <div class="card text-center py-12">
                <div class="text-6xl mb-4">üíä</div>
                <h2 class="text-2xl font-bold text-gray-700 mb-2">No medicines found</h2>
                <p class="text-gray-600">Try a different search term</p>
            </div>
            <% } else { %>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6" id="medicineGrid">
                    <% medicines.forEach(medicine=> { %>
                        <div class="card hover:shadow-xl transition-shadow medicine-card"
                            data-name="<%= medicine.name.toLowerCase() %>"
                            data-treatments="<%= medicine.treatments.map(t => t.toLowerCase()).join(',') %>"
                            data-category="<%= medicine.category.toLowerCase() %>">
                            <!-- Header -->
                            <div class="flex justify-between items-start mb-4">
                                <div>
                                    <h3 class="text-xl font-bold text-gray-900">
                                        <%= medicine.name %>
                                    </h3>
                                    <p class="text-sm text-gray-600">
                                        <%= medicine.category %>
                                    </p>
                                </div>
                                <span class="badge
                                <%= medicine.type === 'Antibiotic' ? 'bg-red-100 text-red-800' : '' %>
                                <%= medicine.type === 'Anti-parasitic' ? 'bg-purple-100 text-purple-800' : '' %>
                                <%= medicine.type === 'NSAID' ? 'bg-blue-100 text-blue-800' : '' %>
                                <%= medicine.type === 'Vitamin Supplement' ? 'bg-green-100 text-green-800' : '' %>
                                <%= medicine.type === 'Mineral Supplement' ? 'bg-yellow-100 text-yellow-800' : '' %>
                                <%= medicine.type === 'Anti-protozoal' ? 'bg-pink-100 text-pink-800' : '' %>
                            ">
                                    <%= medicine.type %>
                                </span>
                            </div>

                            <!-- Treatments -->
                            <div class="mb-4">
                                <h4 class="text-sm font-semibold text-gray-700 mb-2">üéØ Treats:</h4>
                                <div class="flex flex-wrap gap-2">
                                    <% medicine.treatments.forEach(treatment=> { %>
                                        <span class="px-3 py-1 bg-emerald-50 text-emerald-700 text-sm rounded-full">
                                            <%= treatment %>
                                        </span>
                                        <% }) %>
                                </div>
                            </div>

                            <!-- Dosage Calculator -->
                            <div class="bg-blue-50 border-2 border-blue-200 rounded-lg p-4 mb-4">
                                <h4 class="font-semibold text-gray-900 mb-3">üíâ Dosage Calculator</h4>
                                <div class="space-y-2">
                                    <div class="flex flex-col md:flex-row items-stretch md:items-center gap-2">
                                        <label class="text-sm text-gray-700 md:whitespace-nowrap">Animal Weight:</label>
                                        <input type="number" id="weight-<%= medicine.id %>" min="1" step="1"
                                            placeholder="kg" class="flex-1 px-3 py-2 border border-gray-300 rounded-lg">
                                        <button onclick="calculateDosage('<%= species %>', '<%= medicine.id %>')"
                                            class="btn-primary px-4 py-2 w-full md:w-auto md:whitespace-nowrap">
                                            Calculate
                                        </button>
                                    </div>
                                    <div id="result-<%= medicine.id %>"
                                        class="hidden mt-3 p-3 bg-white border border-blue-300 rounded-lg">
                                        <p class="text-sm font-semibold text-gray-900 mb-1">Recommended Dosage:</p>
                                        <p id="dosage-<%= medicine.id %>" class="text-emerald-600 font-bold"></p>
                                    </div>
                                </div>
                                <div class="mt-3 text-xs text-gray-600">
                                    <p><strong>Standard Dosage:</strong>
                                        <%= medicine.dosage.amount %>
                                            <%= medicine.dosage.unit %>
                                    </p>
                                    <p><strong>Route:</strong>
                                        <%= medicine.dosage.route %>
                                    </p>
                                    <p><strong>Frequency:</strong>
                                        <%= medicine.dosage.frequency %>
                                    </p>
                                </div>
                            </div>

                            <!-- Withdrawal Period -->
                            <div class="grid grid-cols-2 gap-3 mb-4">
                                <div class="bg-red-50 border border-red-200 rounded-lg p-3">
                                    <p class="text-xs text-gray-600 mb-1">ü•© Meat Withdrawal</p>
                                    <p class="text-lg font-bold text-red-600">
                                        <%= medicine.withdrawalPeriod.meat %> days
                                    </p>
                                </div>
                                <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-3">
                                    <p class="text-xs text-gray-600 mb-1">
                                        <%= species==='poultry' ? 'ü•ö Egg Withdrawal' : 'ü•õ Milk Withdrawal' %>
                                    </p>
                                    <p class="text-lg font-bold text-yellow-600">
                                        <%= medicine.withdrawalPeriod.milk !==undefined ? medicine.withdrawalPeriod.milk
                                            + ' days' : medicine.withdrawalPeriod.eggs !==undefined ?
                                            medicine.withdrawalPeriod.eggs + ' days' : 'N/A' %>
                                    </p>
                                </div>
                            </div>

                            <!-- Precautions & Side Effects -->
                            <div class="space-y-2 text-sm">
                                <div class="bg-yellow-50 border-l-4 border-yellow-500 p-3 rounded">
                                    <p class="font-semibold text-yellow-900 mb-1">‚ö†Ô∏è Precautions:</p>
                                    <p class="text-yellow-800">
                                        <%= medicine.precautions %>
                                    </p>
                                </div>
                                <% if (medicine.sideEffects) { %>
                                    <div class="bg-orange-50 border-l-4 border-orange-500 p-3 rounded">
                                        <p class="font-semibold text-orange-900 mb-1">Side Effects:</p>
                                        <p class="text-orange-800">
                                            <%= medicine.sideEffects %>
                                        </p>
                                    </div>
                                    <% } %>
                                        <% if (medicine.contraindications) { %>
                                            <div class="bg-red-50 border-l-4 border-red-500 p-3 rounded">
                                                <p class="font-semibold text-red-900 mb-1">üö´ Contraindications:</p>
                                                <p class="text-red-800">
                                                    <%= medicine.contraindications %>
                                                </p>
                                            </div>
                                            <% } %>
                            </div>
                        </div>
                        <% }) %>
                </div>
                <% } %>

                    <!-- Info Section -->
                    <div class="mt-8 card bg-gradient-to-r from-blue-50 to-emerald-50">
                        <h3 class="text-lg font-semibold text-gray-900 mb-3">‚ÑπÔ∏è Important Information</h3>
                        <ul class="space-y-2 text-sm text-gray-700">
                            <li>‚úÖ Always consult a licensed veterinarian before administering medications</li>
                            <li>‚úÖ Complete the full course of antibiotics even if symptoms improve</li>
                            <li>‚úÖ Withdrawal periods are MANDATORY for food safety - do not list products during this
                                time</li>
                            <li>‚úÖ Store all medications as per manufacturer's instructions</li>
                            <li>‚úÖ Keep detailed records of all treatments in the medical log</li>
                            <li>‚úÖ Calculate dosages based on current animal weight for accuracy</li>
                        </ul>
                    </div>
    </main>

    <footer class="bg-gray-800 text-white mt-12 py-6">
        <div class="max-w-full xl:max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <p>&copy; 2024 JeevBandhu. Evidence-based veterinary information.</p>
        </div>
    </footer>

    <script>
        // Mobile menu toggle for medicine guide
        const medicineMenuBtn = document.getElementById('medicineMenuBtn');
        const medicineMenu = document.getElementById('medicineMenu');

        if (medicineMenuBtn && medicineMenu) {
            medicineMenuBtn.addEventListener('click', function (e) {
                e.stopPropagation();
                medicineMenu.classList.toggle('hidden');
                medicineMenu.classList.toggle('active');
                medicineMenuBtn.classList.toggle('active');
            });

            // Close menu when clicking outside
            document.addEventListener('click', function (e) {
                if (medicineMenu && !medicineMenu.contains(e.target) && !medicineMenuBtn.contains(e.target)) {
                    medicineMenu.classList.add('hidden');
                    medicineMenu.classList.remove('active');
                    medicineMenuBtn.classList.remove('active');
                }
            });

            // Close menu when clicking a link
            const medicineLinks = medicineMenu.querySelectorAll('a');
            medicineLinks.forEach(link => {
                link.addEventListener('click', function () {
                    medicineMenu.classList.add('hidden');
                    medicineMenu.classList.remove('active');
                    medicineMenuBtn.classList.remove('active');
                });
            });
        }

        // Dosage calculation function
        async function calculateDosage(species, medicineId) {
            const weightInput = document.getElementById(`weight-${medicineId}`);
            const resultDiv = document.getElementById(`result-${medicineId}`);
            const dosageText = document.getElementById(`dosage-${medicineId}`);

            const weight = parseFloat(weightInput.value);

            if (!weight || weight <= 0) {
                alert('‚ö†Ô∏è Please enter a valid animal weight');
                return;
            }

            try {
                const response = await fetch('/guide/medicine/calculate-dosage', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ species, medicineId, weight })
                });

                const result = await response.json();

                if (result.success) {
                    const info = result.dosageInfo;
                    dosageText.innerHTML = `
                        <strong>${info.dosage}</strong><br>
                        <span class="text-sm text-gray-700">${info.route}</span><br>
                        <span class="text-sm text-gray-700">${info.frequency}</span>
                    `;
                    resultDiv.classList.remove('hidden');
                } else {
                    alert(`‚ùå ${result.error}`);
                }
            } catch (error) {
                alert('‚ùå Failed to calculate dosage. Please try again.');
            }
        }

        // Real-time search functionality
        const searchInput = document.getElementById('medicineSearch');
        const medicineCards = document.querySelectorAll('.medicine-card');
        const visibleCount = document.getElementById('visibleMedicines');

        if (searchInput) {
            searchInput.addEventListener('input', function () {
                const searchTerm = this.value.toLowerCase().trim();
                let visible = 0;

                medicineCards.forEach(card => {
                    const name = card.dataset.name;
                    const treatments = card.dataset.treatments;
                    const category = card.dataset.category;

                    // Check if search term matches name, treatments, or category
                    const matches = name.includes(searchTerm) ||
                        treatments.includes(searchTerm) ||
                        category.includes(searchTerm);

                    if (matches || searchTerm === '') {
                        card.style.display = 'block';
                        visible++;
                    } else {
                        card.style.display = 'none';
                    }
                });

                // Update visible count
                if (visibleCount) {
                    visibleCount.textContent = visible;
                }
            });
        }
    </script>
</body>

</html>